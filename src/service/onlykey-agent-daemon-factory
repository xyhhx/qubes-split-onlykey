#!/bin/bash
set -aeo pipefail
set -x
identifier="onlykey-agent-daemon-factory"

env

log() {
  systemd-cat --identifier="${identifier}" echo "${@}"
}

handle_sig(){
  systemd-notify --status "Exiting" \
    && sleep 3 \
    && exit 0
}


trap handle_sig SIGHUP SIGINT SIGQUIT

[[ -z "${0}" ]] \
  && echo "No client domain specified, exiting" \
  && exit 1



busctl call \
  org.freedesktop.systemd1 \
  /org/freedesktop/systemd1 \
  org.freedesktop.systemd1.Manager \
  StartUnit \
  ss \
  "onlykey-agent-daemon-factory@${0}.service" \
  replace

